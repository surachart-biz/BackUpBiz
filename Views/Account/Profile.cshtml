@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-8 col-lg-6 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-user-circle me-2"></i>
                    User Profile
                </h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong>Username:</strong>
                    </div>
                    <div class="col-sm-8">
                        @User.Identity?.Name
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong>Full Name:</strong>
                    </div>
                    <div class="col-sm-8">
                        @(User.FindFirst("FullName")?.Value ?? "Not specified")
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong>Email:</strong>
                    </div>
                    <div class="col-sm-8">
                        @(User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "Not specified")
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong>User ID:</strong>
                    </div>
                    <div class="col-sm-8">
                        @User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
        margin-top: 2rem;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
    }
    
    .btn {
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
    }
</style>
